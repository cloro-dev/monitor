# Enforce pnpm as the package manager
package-manager-strict=true

# Prevent npm usage
force-package-manager=pnpm

# Set pnpm store directory (optional but recommended)
store-dir=~/.pnpm-store

# Use shamefully-hoist for compatibility (remove if not needed)
shamefully-hoist=false

# Prefer hoisted dependencies for better compatibility
prefer-frozen-lockfile=true